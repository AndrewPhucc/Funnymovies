<h2 class="login-title">Log in</h2>

<div class="login-container">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="input-group">
      <%= f.label :email, class: "input-label" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input-field" %>
    </div>

    <div class="input-group">
      <%= f.label :password, class: "input-label" %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "input-field" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="input-group remember-me">
        <%= f.check_box :remember_me, class: "checkbox" %>
        <%= f.label :remember_me, class: "input-label" %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class: "btn-submit" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
  
</div>
 <%= link_to 'Back', root_path, class: 'btn-back' %>
